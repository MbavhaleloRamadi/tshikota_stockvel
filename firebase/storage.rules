rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check file size (5MB max)
    function isValidSize() {
      return request.resource.size < 5 * 1024 * 1024;
    }
    
    // Helper function to check file type
    function isValidType() {
      return request.resource.contentType.matches('image/.*') 
        || request.resource.contentType == 'application/pdf';
    }
    
    // Proof of payment uploads
    match /proofs/{fileName} {
      // Anyone can upload proof of payment (members submit anonymously)
      allow create: if isValidSize() && isValidType();
      
      // Anyone can read proofs (needed for verification display)
      allow read: if true;
      
      // Only authenticated users can update/delete (admin only in practice)
      allow update, delete: if request.auth != null;
    }
    
    // Member profile images (future feature)
    match /profiles/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && isValidSize()
        && request.resource.contentType.matches('image/.*');
    }
    
    // Reports and exports (admin generated)
    match /reports/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
